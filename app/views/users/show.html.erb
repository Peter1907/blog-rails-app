<div class=<%= "user-page" %>>
  <div class="user">
    <img src=<%= @user.photo %> alt="User photo">
    <div class="info">
      <h1><%= @user.name %></h1>
      <p>Number of posts: <%= @user.posts.count %></p>
    </div>
  </div>
  <div class="bio">
    <%= @user.bio %>
  </div>
  <div class="posts">
    <% @user.last_3_posts.each_with_index do |post, i| %>
      <div class="post">
        <div class="post-body">
          <h4>
            <%= link_to "post ##{i + 1}", user_post_path(@user.id, post.id) %>
          </h4>
          <p><%= post.text %></p>
        </div>
        <div class="stats">
          <span>likes: <%= post.likes.count %></span>,
          <span>comments: <%= post.comments.count %></span>
        </div>
      </div>
    <% end %>
    <a href=<%= user_posts_path(@user.id) %>>See all posts</a><br>
    <%= link_to "Back", users_path %>
  </div>
</div>
