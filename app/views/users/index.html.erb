<section class="users">
  <% @users.each do |user| %>
    <div class="user">
        <img class="user-photo" src=<%= user.photo %> alt="User photo">
        <div class="info">
          <h1>
            <%= link_to user.name, user_path(user.id) %>
          </h1>
          <p>Number of posts: <%= user.posts.count %></p>
        </div>
    </div>
  <% end %>
</section>
